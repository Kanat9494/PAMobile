<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAMobile.Views.Details.DepositStatementPage"
             Title="Выписки"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <Button Margin="10" BackgroundColor="#ff0000" Text="Выписка по основной сумме" Command="{Binding PrincipalAmountCommand}" FontFamily="MontserratRegular"/>

        <Button Margin="10" BackgroundColor="#ff0000" Text="Выписка по процентам" Command="{Binding InterestsStatementCommand}" FontFamily="MontserratRegular"/>
    </VerticalStackLayout>
</ContentPage>