<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAMobile.Views.Graphics.PdfPage"
             Shell.TabBarIsVisible="False"
             Title="">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" RowDefinitions="*, 60">

        <WebView Source="{Binding PdfUrl}"/>

        <Button Background="{x:StaticResource Red50}" Text="Скачать" Margin="10, 0, 10, 10" Grid.Row="1"
            Command="{Binding DownloadCommand}"/>
    </Grid>
</ContentPage>